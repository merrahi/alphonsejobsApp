<!DOCTYPE html>
<html>
    <head>

        <meta charset="UTF-8">
        <title>{% block title %}YourJob!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
       {# <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">#}
        <link rel="stylesheet" href="{{ asset('vendor/1-col-portfolio.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/radiostyle.css') }}">
        {#<link href="/bootstrap4-glyphicons/css/bootstrap-glyphicons.min.css" rel="stylesheet" type="text/css" />#}

        
        {% block stylesheets %}
            {# 'app' must match the first argument to addEntry() in webpack.config.js #}
            {{ encore_entry_link_tags('css/app') }}

            <!-- Renders a link tag (if your module requires any CSS)
                 <link rel="stylesheet" href="/build/app.scss"> -->
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="#">
                <img src="{{ asset('images/alphonse.png' ) }}" width="30" height="30" alt="">
            </a>
             <div>
                 <a href="{{path('affiliate.create')}}" class="btn btn-default navbar-btn">Become Affiliate</a>
             {% if is_granted('ROLE_ADMIN') %}
                     <a href="{{path('affiliate.list')}}" class="btn btn-default navbar-btn">Affiliates</a>
                     <a href="{{path('job.create')}}" class="btn btn-default navbar-btn">Post a Job</a>
                     <a href="{{path('app_logout')}}" class="btn btn-default navbar-btn">logout</a>
             {% else %}
                 <a href="{{path('app_register')}}" class="btn btn-default navbar-btn">Register</a>
                 <a href="{{path('app.login')}}" class="btn btn-default navbar-btn">login</a>
             {% endif %}
                 {% if is_granted('ROLE_ADMIN') %}
               {% endif %}

            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                       
                    </li>
                </ul>
            </div>
        </nav>
       

    <div class="container">
        {% block body %}{% endblock %}
    </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('js/app') }}

            <!-- Renders app.js & a webpack runtime.js file
                <script src="/build/runtime.js"></script>
                <script src="/build/app.js"></script> -->
        {% endblock %}
    </body>
</html>
